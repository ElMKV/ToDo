<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorOnProcessingBackground"
        android:gravity="center"
        android:text="@string/dialog_message"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/jobName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:hint="@string/name_job"
        android:inputType="text">

    </EditText>

    <EditText
        android:id="@+id/descriptionName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="16dp"
        android:hint="@string/description_job"
        android:inputType="textPassword"></EditText>

    <TimePicker
        android:id="@+id/timePicker"
        style="@android:style/Widget.Material.Light.TimePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:amPmTextColor="@color/colorOnProcessingBackground"
        android:headerBackground="@color/colorOnProcessingBackground"
        android:numbersInnerTextColor="@color/colorOnProcessingBackground"
        android:numbersSelectorColor="@color/colorOnProcessingBackground"
        android:numbersTextColor="@color/colorOnProcessingBackground"
        android:timePickerMode="spinner" />

</LinearLayout>